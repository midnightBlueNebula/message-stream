<h1>Registration Form</h1>

<section id="register-form">
    <%= form_for @user, url: register_path, action: :new do |f| %>
        <%= f.label "Name:" %>
        <%= f.text_field :name %>
        
        <br />

        <%= f.label "E-mail:" %>
        <%= f.text_field :email %>

        <br />

        <%= f.label "Password:" %>
        <%= f.password_field :password %>

        <br />

        <%= f.label "Password Confirmation:" %>
        <%= f.password_field :password_confirmation %>

        <br />

        <%= f.submit "Register" %>
    <% end %>
</section>
